#include<stdio.h>
int main()
{
	char a;
	printf("Please inter a character");
	scanf("%c",&a);
	unsigned char b =(unsigned char) a;
	printf("The eighth bit is %d\n",(b>>7&1));
	printf("The seventh bit is %d\n",(b>>6&1));
	printf("The sixth bit is %d\n",(b>>5&1));
	printf("The fifth bit is %d\n",(b>>4&1));
	printf("The forth bit is %d\n",(b>>3&1));
	printf("The third bit is %d\n",(b>>2&1));
	printf("The second bit is %d\n",(b>>1&1));
	printf("The first bit is %d\n",(b&1));
	return 0;
}
